<!doctype html>    
<html>
<head>
    <meta charset="utf-8" /><meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<%= csrf_meta_tag %>
  	<title>Lists of Lists</title>
  	<%= stylesheet_link_tag    "bootstrap.min", :media => "all" %>
  	<%= stylesheet_link_tag    "site", :media => "all" %>
  	<%= stylesheet_link_tag    "gridview", :media => "all" %>
  
  	<%= javascript_include_tag "jquery-1.9.1.min" %>
  	<%= javascript_include_tag "bootstrap.min" %>
  	<%= javascript_include_tag "jquery.placeholder.min" %>
  	<%= javascript_include_tag "jquery.validate.min" %>
  	<%= javascript_include_tag "jquery.validate.extension" %>
    <%= javascript_include_tag "jquery.pstrength-min.1.2" %>
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "gridview" %>
    
    <script type="text/javascript" language="JavaScript">
		var __RootURL = "<%=url_for(:controller => "/report", :action=>"index")%>";
    </script>
</head>
<body>
    <div class="page">
        <div class="header">
            <div class="panel">
            	<div class="title">Lists of Lists</div>
            	<% if user_signed_in? %>
            		<div class="user-info">
            			Welcome, <%= session[:user_login_service] == "twitter"? current_user.email.sub("@twitter_2013.com", "") : current_user.email %>, 
            			<%= link_to("Logout", destroy_user_session_path) %> |  
            			<%= link_to("Change password", edit_user_registration_path) %> 
        			</div>
        		<% else %>
            		<div class="user-info"><%= link_to("Login", new_user_session_path) %> </div>
        		<% end%>
            </div>
        </div>
        <div class="content">
            <%= yield %>
        </div>
        <div class="footer">
        </div>
    </div>
</body>
</html>
<%= javascript_include_tag "mediaqueriresforIElt9.min" %>
<script type="text/javascript" language="javascript">
    $(document).ready(function() {
        $('input[type=text], textarea').placeholder();
    });
</script>